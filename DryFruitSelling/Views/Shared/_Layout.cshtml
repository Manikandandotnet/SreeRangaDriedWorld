<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



    @*<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />*@
    <meta name="author" content="" />
    <title>Sree Ranga Dried World</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/Content/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/css/styles.css" rel="stylesheet" />






</head>
<body>

    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container px-5">
            <a class="navbar-brand" style="color:purple" href="#">Sree Ranga Dried World</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                    <li class="nav-item">@Html.ActionLink("Home", "Home", "HomePage", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "AboutPage", "HomePage", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "ContactPage", "HomePage", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Shop", "ShopPage", "HomePage", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Register", "RegisteredUser", "Register", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Login User", "UserLogin", "Register", new { area = "" }, new { @class = "nav-link" })</li>

                </ul>
            </div>
        </div>
    </nav>



    @RenderBody();















<footer>

    <div class="container-fluid bg-dark   text-white mt-5 py-5 px-sm-3 px-md-5">
        <div class="row pt-5">
            <div class="col-lg-6 col-md-6 mb-5">
                <a href="" class="navbar-brand font-weight-bold text-primary m-0 mb-4 p-0" style="font-size: 40px; line-height: 40px;">
                    <img style="width:12%;height:auto" src="~/Content/img/logo.jpeg" alt="">


                    <span style="color:purple">Sree Ranga Dried World</span>
                </a>
                <p>
                    "At Sree Ranga Dried World, our vision is to be the premier provider of high-quality dried fruits,
                    offering unparalleled taste, nutrition, and convenience to our customers.
                    We are committed to sourcing the finest produce from around the world,
                    ensuring that our products are both delicious and sustainably produced.
                </p>
                <div class="d-flex justify-content-start mt-4">
                    <a class="btn btn-outline-primary rounded-circle text-center mr-2 px-0"
                       style="width: 38px; height: 38px;" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-outline-primary rounded-circle text-center mr-2 px-0"
                       style="width: 38px; height: 38px;" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-outline-primary rounded-circle text-center mr-2 px-0"
                       style="width: 38px; height: 38px;" href="#"><i class="fab fa-linkedin-in"></i></a>
                    <a class="btn btn-outline-primary rounded-circle text-center mr-2 px-0"
                       style="width: 38px; height: 38px;" href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-5">
                <h3 class="mb-4" style="color:purple">Get In Touch</h3>
                <div class="d-flex">
                    <h4 class="fa fa-map-marker-alt text-primary"></h4>
                    <div class="pl-3">
                        <h5 class="text-white">Address</h5>
                        <p>123 Street, Anna Nagar, Chennai</p>
                    </div>
                </div>
                <div class="d-flex">
                    <h4 class="fa fa-envelope text-primary"></h4>
                    <div class="pl-3">
                        <h5 class="text-white">Email</h5>
                        <p>sreeranga@gmail.com</p>
                    </div>
                </div>
                <div class="d-flex">
                    <h4 class="fa fa-phone-alt text-primary"></h4>
                    <div class="pl-3">
                        <h5 class="text-white">Phone</h5>
                        <p>90345 61822</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-5">
                <h3 class="mb-4" style="color:purple">Quick Links</h3>
                <div class="d-flex flex-column justify-content-start">

                    <i class="fa fa-angle-right mr-2">

                        @Html.ActionLink("Home", "Home", "HomePage", new { area = "" }, new { @class = "text-white mb-2" })




                    </i>

                    <i class="fa fa-angle-right mr-2">
                        @Html.ActionLink("About", "AboutPage", "HomePage", new { area = "" }, new { @class = "text-white mb-2" })
                    </i>
                    <i class="fa fa-angle-right mr-2">
                        @Html.ActionLink("Contact", "ContactPage", "HomePage", new { area = "" }, new { @class = "text-white mb-2" })
                    </i>


                    <i class="fa fa-angle-right mr-2">

                        @Html.ActionLink("Shop", "ShopPage", "HomePage", new { area = "" }, new { @class = "text-white mb-2" })

                    </i>
                    <i class="fa fa-angle-right mr-2">
                        @Html.ActionLink("Register", "RegisteredUser", "Register", new { area = "" }, new { @class = "text-white mb-2" })
                    </i>

                    <i class="fa fa-angle-right mr-2">

                        @Html.ActionLink("Login", "LoginUser", "Register", new { area = "" }, new { @class = "text-white mb-2" })

                    </i>
                </div>
            </div>
        </div>
        <div class="container-fluid pt-5" style="border-top: 1px solid rgba(23, 162, 184, .2);">
            <p class="m-0 text-center text-white">
                &copy; <a class="font-weight-bold" style="color:purple" href="#">Public High School</a>. All Rights Reserved. Designed
                by
                <a class="font-weight-bold" style="color:purple">Manikandan.M</a>
            </p>
        </div>
    </div>
    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
</footer>
   













    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
