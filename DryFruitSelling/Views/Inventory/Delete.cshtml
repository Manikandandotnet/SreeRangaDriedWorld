@model DryFruitSelling.Models.inventory

@{
    ViewBag.Title = "Delete";
}

<main class="flex-shrink-0">
    <section class="py-5">
        <div class="container px-5">
            <!-- Contact form-->
            <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                <div class="text-center mb-5">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-person-circle"></i></div>


                    <h1 class="fw-bolder">Delete Inventory System Details</h1>

                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6">

                        <h3>Are you sure you want to delete this?</h3>
                        <div>

                            <dl class="dl-horizontal">

                                <dt>
                                    @Html.DisplayNameFor(model => model.InventoryID)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.InventoryID)
                                </dd>


                                <dt>
                                    @Html.DisplayNameFor(model => model.FruitType)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.FruitType)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Quantity)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.PreservationStatus)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.PreservationStatus)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.ExpirationDate)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ExpirationDate)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-default" /> |
                                    @Html.ActionLink("Back to List", "Index")
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
